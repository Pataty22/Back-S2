<!DOCTYPE html>
<html>
  <head>
    <%- include("../partials/meta") %>
  </head>

  <body>
    <div class="container my-4">
      <div class="card mb-4 shadow">
        <div class="card-header">
          <h3>Modificar usuario</h3>
        </div>
        <div class="card-body">
          <form action="/usuarios/<%= user.id %>?_method=PATCH" method="post">
            <div class="mb-3">
              <label for="firstname" class="form-label">Nombre</label>
              <input
                type="text"
                name="firstname"
                value="<%= user.firstname %>"
                placeholder="Ingresar nombre..."
                class="form-control"
                required="true"
              />
            </div>
            <div class="mb-3">
              <label for="lastname" class="form-label">Apellido</label>
              <input
                type="text"
                name="lastname"
                value="<%= user.lastname %>"
                placeholder="Ingresar apellido..."
                class="form-control"
                required="true"
              />
            </div>
            <div class="mb-3">
              <label for="age" class="form-label">Edad</label>
              <input
                type="text"
                name="age"
                value="<%= user.age %>"
                placeholder="Ingresar edad..."
                class="form-control"
                required="true"
              />
            </div>
            <button type="submit" name="button" class="btn btn-success">
              Modificar
            </button>
          </form>
        </div>
      </div>
      <a href="/usuarios" class="nounderline">&larr; Volver</a>
    </div>
  </body>
</html>
